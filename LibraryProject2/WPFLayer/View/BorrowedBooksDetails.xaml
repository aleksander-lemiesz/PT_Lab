<Window
    x:Class="WPFLayer.View.BorrowedBooksDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BorrowedBooksDetails"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel Background="LightYellow">
        <StackPanel Margin="3">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Information about the book: " />
            <TextBlock FontSize="16" Text="{Binding BookInfo}" />
        </StackPanel>
        <StackPanel Margin="3">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Information about the customer: " />
            <TextBlock FontSize="16" Text="{Binding CustomerInfo}" />
        </StackPanel>

    </StackPanel>
</Window>
