<Window
    x:Class="WPFLayer.View.BorrowedBooksDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BorrowedBooksDetails"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="Information about the book:" />
        <TextBlock Text="{Binding BookInfo}" />
        <TextBlock Text="Information about the customer:" />
        <TextBlock Text="{Binding CustomerInfo}" />
    </StackPanel>
</Window>
