<Window
    x:Class="WPFLayer.View.BookDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BookDetailsWindow"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="ID:" />
        <TextBlock Text="{Binding BookId}" />
        <TextBlock Text="Title:" />
        <TextBlock Text="{Binding Title}" />
        <TextBlock Text="Author:" />
        <TextBlock Text="{Binding Author}" />
        <TextBlock Text="Type:" />
        <TextBlock Text="{Binding Type}" />
        <TextBlock Text="Penalty Cost:" />
        <TextBlock Text="{Binding PenaltyCost}" />
        <TextBlock Text="Return Date:" />
        <TextBlock Text="{Binding ReturnDate}" />
        <TextBlock Text="Availability:" />
        <TextBlock Text="{Binding State}" />
    </StackPanel>
</Window>
